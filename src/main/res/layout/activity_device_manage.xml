<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/tt"
        android:layout_width="match_parent" >

        <TextView
            style="@style/tt_tv"
            android:layout_centerInParent="true"
            android:text="设备管理" />

        <ImageView
            android:id="@+id/back_manage"
            style="@style/tt_iv"
            android:layout_alignParentLeft="true"
            android:background="@drawable/title_im" />
    </RelativeLayout>

    <ListView
        android:id="@+id/manage_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:divider="@color/gray_shallow"
        android:dividerHeight="2dp" >
    </ListView>

    <ImageView
        android:id="@+id/manage_add"
        android:background="@drawable/addmanage_bg"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/addmanage" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="77dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/manage_open"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="11dp"
                android:layout_weight="1"
                android:background="@drawable/btn_open"
                android:text="批量开启"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/manage_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_weight="1"
                android:background="@drawable/btn_close"
                android:text="批量关闭"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/manage_pause"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="11dp"
                android:layout_weight="1"
                android:background="@drawable/btn_pause"
                android:text="批量暂停"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>