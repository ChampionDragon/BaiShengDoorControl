<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/blue" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/back_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/title_im" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:text="设备设置"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <com.bs.view.RoundImageView
            android:id="@+id/set_riv"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="33dp"
            android:src="@drawable/wy" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="22dp" >

            <TextView
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="设备名称"
                android:textSize="@dimen/user_tv" />

            <Spinner
                android:textColor="@color/blueSky"
                android:id="@+id/set_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/tv_left"
                android:background="@null"
                android:textSize="@dimen/user_tv" />
        </LinearLayout>

        <ImageView style="@style/iv" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="22dp" >

            <TextView
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="设备地址"
                android:textSize="@dimen/user_tv" />

            <EditText
                android:textColor="@color/blueSky"
                android:id="@+id/set_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/tv_left"
                android:background="@null"
                android:textSize="@dimen/user_tv" />
        </LinearLayout>

        <ImageView style="@style/iv" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="22dp" >

            <TextView
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="安装时间"
                android:textSize="@dimen/user_tv" />

            <TextView
                android:id="@+id/set_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/tv_left"
                android:background="@null"
                android:textColor="@color/blueSky"
                android:textSize="@dimen/user_tv" />
        </LinearLayout>

        <ImageView style="@style/iv" />


        <Button
            android:id="@+id/set_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/adddevice_height"
            android:layout_marginLeft="@dimen/adddevice_left"
            android:layout_marginRight="@dimen/adddevice_left"
            android:layout_marginTop="@dimen/cloudsave_height"
            android:background="@drawable/btn_bg"
            android:text="确               定 "
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>