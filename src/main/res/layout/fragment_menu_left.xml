<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/menu_manage"
        style="@style/menu_tv"
        android:drawableLeft="@drawable/setdevice"
        android:text="设备管理" />

    <TextView
        android:id="@+id/menu_add"
        style="@style/menu_tv"
        android:drawableLeft="@drawable/onepress"
        android:text="一键配置" />

    <TextView
        android:id="@+id/menu_push"
        style="@style/menu_tv"
        android:drawableLeft="@drawable/pushinfo"
        android:text="信息推送(ctrl)" />

    <TextView
        android:id="@+id/menu_cloudsave"
        style="@style/menu_tv"
        android:drawableLeft="@drawable/cloudsave"
        android:text="云端备份" />

    <TextView
        android:id="@+id/menu_update"
        style="@style/menu_tv"
        android:drawableLeft="@drawable/update"
        android:text="版本升级" />

    <TextView
        android:id="@+id/menu_help"
        style="@style/menu_tv"
        android:drawableLeft="@drawable/usehelp"
        android:text="使用帮助" />

    <TextView
        android:id="@+id/menu_us"
        style="@style/menu_tv"
        android:drawableLeft="@drawable/aboutus"
        android:text="关于我们" />

</LinearLayout>